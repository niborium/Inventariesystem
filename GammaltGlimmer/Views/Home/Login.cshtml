@model GammaltGlimmer.Models.AppUser

<h1>Logga in som Inköpare eller Auktionsansvarig</h1>

<form asp-controller="Home" asp-action="Login">
    <div class="form-group col-sm-6">
        <label for="Username">Användarnamn</label>
        <input type="text" class="form-control"
        id="Username" asp-for="UserName"
               placeholder="Fyll i användarnamn">
    </div>
    <div class="form-group col-sm-6">
        <label for="Password">Lösenord</label>
        <input type="password" class="form-control" id="Password"
                asp-for="Password" placeholder="Fyll i lösenord">
    </div>
    <div class="form-group col-sm-6">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>