@model IEnumerable<GammaltGlimmer.Models.Item>
@inject SignInManager<AppUser> signInmanager;

@{
    ViewData["Title"] = "List";
}

<h1>Samtliga inventarier</h1>
             <td>
                @Html.ActionLink("Skapa nytt försäljningsobjekt", "Create", new { /* id=item.PrimaryKey */ })
            </td>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalPrice)
            </th>
            <th>
                Kategori
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalPrice)
            </td>
            <td>
                <p>@item.Category.CategoryName</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
             <td>
                @if (signInmanager.IsSignedIn(User) && User.IsInRole("Auctioneer"))
                {
                @Html.ActionLink("Radera objekt", "Delete", new { id=item.ItemId })<br />
                @Html.ActionLink("Redigera objekt", "Edit", new { id=item.ItemId })
                }
            </td>
        </tr>
}
    </tbody>
</table>
